<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GeneralRoute5"
    android:background="@drawable/backgroundimage"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp"
        android:src="@drawable/route14"
        android:id="@+id/route5"
        android:onClick="imageClicked"
        android:padding="10dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp"
        android:src="@drawable/map14"
        android:id="@+id/map5"
        android:alpha="0"
        android:padding="10dp"
        android:onClick="imageClicked"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="21dp"
        android:alpha="0.3"
        android:id="@+id/innerRelative"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/BusNo1"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:padding="7dp"
            android:layout_alignParentBottom="true"
            android:text="No bus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/BusNo2"
            android:textSize="20sp"
            android:textColor="#000000"
            android:background="#FFFFFF"
            android:padding="7dp"
            android:layout_above="@id/BusNo1"
            android:text="No bus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <TextView
            android:text="currently:"
            android:id="@+id/currentlyLabel"
            android:textSize="20sp"
            android:paddingLeft="7dp"
            android:textColor="#AAAAAA"
            android:background="#FFFFFF"
            android:layout_above="@id/BusNo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentTop="true"
            android:id="@+id/detailHeader"
            android:background="#6F839A"
            android:text="No Buses"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:paddingVertical="2dp"
            android:paddingHorizontal="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
