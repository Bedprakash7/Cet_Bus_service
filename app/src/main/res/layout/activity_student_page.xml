<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StudentPage"
    android:background="@drawable/osrtc">
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        >

        <Button
            android:id="@+id/GeneralBuses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:onClick="generalClicked"
            android:text="General Buses" />

        <Button
            android:id="@+id/SpecialBuses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/GeneralBuses"
            android:onClick="specialClicked"
            android:text="Special Buses"

            />
    </LinearLayout>

</RelativeLayout>